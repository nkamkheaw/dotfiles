{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "version": {
      "id": "li-json-schema://version",
      "type": "string",
      "title": "Gradle version",
      "description": "Version of Gradle to use for the build (e.g. 3.2.1, 3.*)."
    },
    "plugins": {
      "id": "li-json-schema://plugins",
      "type": "object",
      "properties": {},
      "additionalProperties": {
        "anyOf": [
          {
            "$ref": "productDependency.json"
          },
          {
            "type": "string"
          }
        ]
      },
      "title": "Gradle plugins",
      "description": "Gradle plugins to use in the build (e.g. ligradle-jvm)"
    }
  },
  "additionalProperties": false,
  "required": [
    "version"
  ]
}
